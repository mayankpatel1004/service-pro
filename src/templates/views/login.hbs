<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>{{metatitle}}</title>
  <meta name="description" content="{{metadescription}}">
  <link rel="stylesheet" href="../../../../public/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../../../public/vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="../../../../public/vendors/flag-icon-css/css/flag-icon.min.css">
  <link rel="stylesheet" href="../../../../public/css/vertical-layout-light/style.css">
  <link rel="stylesheet" href="../../../../public/css/custom.css">
  <link rel="shortcut icon" href="../../../../public/images/favicon.png" />
</head>
<body>
  <div class="container-scroller login">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
        <div class="row flex-grow">
          <div class="col-lg-6 login-half-bg d-flex flex-row"></div>
          <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="auth-form-transparent text-left p-3">
              <div class="brand-logo">
                <img src="../../../../public/images/logo.png" alt="logo">
              </div>
              <h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" id="login_form" action="/login">
                <div class="form-group">
                  <input type="email" class="form-control form-control-lg" name="user_name" id="user_name" placeholder="Username" />
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg" id="user_password" placeholder="Password" name="user_password" />
                </div>
                <div class="mt-3">
                  <button type="submit" id="submit_button" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                </div>
                <div id="login_error" class="text-danger"></div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                    
                  </div>
                  <a href="/forgotpassword" class="auth-link text-black">Forgot password?</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../../../../public/vendors/js/vendor.bundle.base.js"></script>
  <script type="text/javascript">
  $(document).ready(function(){
    if(localStorage.getItem("user_id") > 0){
      window.location.href = '/';
    }
  });
  $("#login_form").submit(function(e){
    $("#login_error").html("");
    e.preventDefault();
    var form = $(this);
    var actionUrl = form.attr('action');
    $("#submit_button").html("Please wait...");
    $.ajax({
        type: "POST",
        url: actionUrl,
        data: form.serialize(),
        success: function(data){
          $("#submit_button").html("SIGN IN");
          if(data.success == 0){
              $("#login_error").html(data.message);
          } else {
            localStorage.setItem("user_id", data.data.user_id);
            localStorage.setItem("user_role", data.data.user_role);
            localStorage.setItem("user_name", data.data.user_firstname+" "+data.data.user_lastname);
            localStorage.setItem("username", data.data.user_name);
            localStorage.setItem("useremail", data.data.user_email);
            localStorage.setItem("display_status", data.data.display_status);
            localStorage.setItem("user_photo",data.data.user_photo);
            localStorage.setItem("active_status", data.data.active_status);
            localStorage.setItem("deleted_status", data.data.deleted_status);
            localStorage.setItem("token", data.token);
            window.location.href = '/';
          }
        }
    });
  });
  </script>
</body>
</html>